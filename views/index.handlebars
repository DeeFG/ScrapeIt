

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h2>SCRAPE IT!</h2>
        </div>
    </div>
</div>

<div id="articles">
    {{#each articleObj}}
        <div class="well">
            <div class="row">
                <div class="col col-md-8">
                    <h4><a href="{{link}}">{{header}}</a></h4>
                    <h6>{{summary}}</h6>
                </div>
                <div class="col col-md-2">
                    <form class="form-inline" action="/api/articles/save/{{id}}" method="POST">
                        <button type="submit" class="btn btn-success">Save Article</button>
                    </form>
                </div>
                <div class="col col-md-2">
                    <form class="form-inline" action="/api/articles/dismiss/{{id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-warning">Remove Article</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
