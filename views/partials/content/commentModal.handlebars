<div class="modal fade" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="commentsModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-header" id="myModalLabel">comments for {{this.header}}</h4>
            </div>
            <div class="modal-body">
                {{#if this.comments}}
                    {{#each this.comments}}
                        <div class="well">
                            <div class="row">
                                <div class="col col-md-10">
                                    <p>{{this.articleComment}}</p>
                                </div>
                                <div class="col col-md-2">
                                    <form class="form-inline" action="/api/comments/{{this.id}}?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">X</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                        <div class="well">
                            <p>This story does not have any comments.</p>
                        </div>
                {{/if}}
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col col-md-8">
                        <form class="form-inline" action="/api/comments/{{this.id}}" method="POST">
                            <input type="text" class="form-control" id="text" name="text" placeholder="Add a new comment...">
                            <button type="submit" class="btn btn-info">Add comment</button>
                        </form>
                    </div>
                    <div class="col col-md-4">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
